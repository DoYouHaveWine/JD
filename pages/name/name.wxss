/* pages/name/name.wxss */
.withdrawal {
	height: 100rpx;
	line-height: 100rpx;
	background: linear-gradient(-6deg, #3F8DFC 0%, #76D3FE 100%);
	border-radius: 15px;
}

.id-content {
	width: 316rpx;
	height: 260rpx;
	background: #ECF3FD;
	border-radius: 10rpx;
}

.name-tip {
	width: 100%;
	height: 59rpx;
	line-height: 59rpx;
	background: linear-gradient(-83deg, #3F8DFC 0%, #76D3FE 99%);
	border-radius: 0px 0px 10rpx 10rpx;
	position: absolute;
	left: 0;
	bottom: 0;
}

.middle-img {
	position: absolute;
	left: 50%;
	top: 40%;
	transform: translate(-50%, -50%);
}
.code-btn{
	color: #3F8DFC !important;
	background: transparent !important;
	border: none !important;
	padding: 0 !important;
}
.sub-success{
	width: 600rpx;
	height: 514rpx;
	background: #FFFFFF;
	border-radius: 10rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	z-index: 99;
}
.sub-fail{
	width: 600rpx;
	height: 560rpx;
	background: #FFFFFF;
	border-radius: 10rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	z-index: 99;
}
.btn-next{
	width:240rpx;
	height: 100rpx;
	line-height: 100rpx;
	background: linear-gradient(-6deg, #3F8DFC 0%, #76D3FE 100%);
	border-radius: 15px;
}
