<view class="main plr15 border-box">
	<view class="just-center">
		<view>
			<image src="../../img/p_head.png" style="width: 168rpx;height: 168rpx;"></image>
		</view>
	</view>
	<view class="mt20">
		<view bindtap='changeName' class="p-items justbetween center-item plr10 ptb15 border-box">
			<view class="flexBox center-item">
				<text class="f15 c-33 plr10">用户昵称</text>
			</view>
			<view class="flexBox center-item">
				<text class="f15 c-99">王耀一</text>
				<image src="../../img/icon_next.png" style="width: 15rpx;height: 26rpx;"></image>
			</view>
		</view>
		<view class="p-items justbetween center-item plr10 ptb15 border-box">
			<view class="flexBox center-item">
				<text class="f15 c-33 plr10">手机号码</text>
			</view>
			<view class="flexBox center-item">
				<text class="f15 c-99">13542541254</text>
				<image src="../../img/icon_next.png" style="width: 15rpx;height: 26rpx;"></image>
			</view>
		</view>
		<view class="p-items justbetween center-item plr10 ptb15 border-box">
			<view class="flexBox center-item">
				<text class="f15 c-33 plr10">微信绑定</text>
			</view>
			<view class="flexBox center-item">
				<text class="f15 c-99">未绑定</text>
				<image src="../../img/icon_next.png" style="width: 15rpx;height: 26rpx;"></image>
			</view>
		</view>
		<view class="p-items justbetween center-item plr10 ptb15 border-box">
			<view class="flexBox center-item">
				<text class="f15 c-33 plr10">注册时间</text>
			</view>
			<view class="flexBox center-item">
				<text class="f15 c-99">2020-01-01 12:58</text>
			</view>
		</view>
	</view>
	<block wx:if="{{nameBox}}">
		<view class="bg-meng"></view>
		<view class="name-box bg-white border-box plr15 ptb20 tc">
			<view class="tc f20 fb mt10">修改昵称</view>
			<view class="tc input-box dib mt20">
				<input type="text" placeholder="请输入2-8位昵称" style="height: 100%;" />
			</view>
			<view class="justbetween center-item f20 tc mt20">
				<view bindtap="changeName" class="btn-name name-cancle c-66 border-box">取消</view>
				<view class="btn-name name-sure">确定</view>
			</view>
		</view>
	</block>
</view>
